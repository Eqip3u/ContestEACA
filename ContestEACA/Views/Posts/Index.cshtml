@model ContestEACA.Models.ViewModels.PostsViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form method="get">
    <div class="form-inline form-group">
        <label class="control-label">Nomination: </label>
        @Html.DropDownList("nomination", Model.Nominations as SelectList, htmlAttributes: new { @class = "form-control" })

        <input type="submit" value="Filter" class="btn btn-default" />
    </div>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HelpNamePost.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HelpNamePost.TextWork)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HelpNamePost.LinkWork)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HelpNamePost.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HelpNamePost.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HelpNamePost.File)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HelpNamePost.Nomination)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HelpNamePost.DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HelpNamePost.DateModified)
            </th>
            <th>
                WorkList
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Posts.OrderByDescending(x => x.Rating)) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TextWork)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LinkWork)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
                <a asp-action="LikeUp" asp-controller="Posts" asp-route-id="@item.ID">Like</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>

            <td>
                <a href=@Url.Content(item.File)>@Url.Content(item.File)</a>
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Nomination.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.DateModified)
            </td>

            <td>
                <a asp-action="Details" asp-route-id="@item.ID">Details</a>
            </td>
            @if (User.Identity.Name == item.Author)
            {
                <td>
                    | <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            }
        </tr>
}
    </tbody>
</table>
