@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Сменить пароль";
    ViewData.AddActivePage(ManageNavPages.ChangePassword);
}

<h2 style="margin-top:5%;" class="text-center"> Сменить пароль</h2>
@Html.Partial("_StatusMessage", Model.StatusMessage)
<div class="row text-center">
   
        <form method="post">

            
            <div class="input-group text-center">
                									<span class="input-group-addon">
                                        <i class="fa fa-unlock-alt fa-lg" aria-hidden="true"></i>
                                    </span>
                <input asp-for="OldPassword" class="form-control" placeholder="Текуший пароль" />
                <span asp-validation-for="OldPassword" class="text-danger" ></span>
            </div>

            <div class="input-group text-center">
               									<span class="input-group-addon">
                                        <i class="fa fa-lock fa-lg" aria-hidden="true"></i>
                                    </span>
                <input asp-for="NewPassword" class="form-control" placeholder="Новый пароль" />
                <span asp-validation-for="NewPassword" class="text-danger" ></span>
            </div>

            <div class="input-group text-center">
                									<span class="input-group-addon">
                                        <i class="fa fa-lock fa-lg" aria-hidden="true"></i>
                                    </span>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Повторите новый пароль" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div style="margin-top:2%" class="form-group input-group">
                   <button type="submit" class="btn btn-primary btn-block">Обновить пароль</button>
            </div>
            
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
