@model IEnumerable<ContestEACA.Models.Post>

@{
    ViewData["Title"] = "Index";
    string colortr;
}

<h2>Мои работы</h2>

@if (ViewBag.CountWork == 0)
{
    @await Html.PartialAsync("_ConfirmedEmail")
}
else
{
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TextWork)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LinkWork)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
    if (item.Status == StatusPost.AwaitingForModeration) { colortr = "warning"; }
    else if (item.Status == StatusPost.Accept) {colortr = "success"; }
    else { colortr = "danger"; }

    if (item.Author.Email == User.Identity.Name)
    {
        <tr class=@colortr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TextWork)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LinkWork)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author.FirstName)
                @Html.DisplayFor(modelItem => item.Author.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                <a asp-action="Edit" asp-controller="Posts" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-controller="Posts" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-controller="Posts"  asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>

    }
}
    </tbody>
</table>
}