@model ContestEACA.Models.ViewModels.AssignmentModeratorsViewModel


@*<script src="~/js/bootstrap-select.js"> </script>*@

@{
    ViewData["Title"] = "AssignmentModerators";
}

<h2>Назначение модераторов</h2>

<hr />


<form asp-action="AssignmentModerators" method="post">
    <div class="row">
        <div class="form-inline form-group">

                <div class="form-group">
                    <label class="control-label">Выберете пользовтеля</label>
                    @Html.DropDownList("userId", Model.Users as SelectList, htmlAttributes: new { @class = "form-control"})
                </div>

                <div class="form-group hidden">
                    <input asp-for="ContestId" value="@Model.ContestId" />
                </div>

                <div class="form-group">
                    <button type="submit" value="Добавить" class="btn btn-primary addjob">Назначить</button>
                </div>

        </div>
    </div>
</form>

<hr />

<h2>Модераторы</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                email
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Moderators)
        {
            <tr>
                <td>
                    @item.FirstName
                    @item.LastName
                </td>
                <td>
                    @item.Email
                </td>
                <td>
                    <a asp-action="DeleteAssignmentModerator" asp-route-contestId="@Model.ContestId" asp-route-userId="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>